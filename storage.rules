
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable, as images need to be displayed on the site.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && firestore.get(
        /databases/(default)/documents/users/$(request.auth.uid)
      ).data.isAdmin;
    }
  }
}
